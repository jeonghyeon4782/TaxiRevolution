<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/sos_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:drawableBottom="@drawable/emergencyxml"
        android:padding="10dp"
        android:text="SOS" />

    <Button
        android:id="@+id/police_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/fire_btn"
        android:background="@drawable/border"
        android:drawableBottom="@drawable/policexml"
        android:padding="10dp"
        android:text="112" />

    <Button
        android:id="@+id/fire_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/sos_btn"
        android:background="@drawable/border"
        android:drawableBottom="@drawable/ambulancexml"
        android:padding="10dp"
        android:text="119" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Google 지도" />

    <Button
        android:id="@+id/btn_startAndStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="@drawable/rounded_button"
        android:text="전송 시작" />

</RelativeLayout>
